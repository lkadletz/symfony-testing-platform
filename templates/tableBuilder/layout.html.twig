<table>
    <caption>TEST</caption>

    {# -- HEADER -- #}
    {% if tfoot != [] %}
    <thead>
        {% for row in thead %}
            <tr>
                {% for cell in row %}
                    <th>{{ cell }}</th>
                {% endfor %}
            </tr>
        {% endfor %}
    </thead>
    {% endif %}

    {# -- BODY -- #}
    {% if tbody != [] %}
    <tbody>
        {% for row in tbody %}
            <tr>
                {% for cell in row %}
                    {% if cell == 0 %}
                        {% set reqs = [cell] %}
                        <td>{% include 'tableBuilder/_integer.html.twig' with reqs %}</td>
                    {% else %}
                        <td>{{ cell }}</td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
    {% endif %}

    {# -- FOOTER -- #}
    {% if tfoot != [] %}
    <tfoot>
        {% for row in tfoot %}
            <tr>
                {% for cell in row %}
                    <td>{{ cell }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tfoot>
    {% endif %}
</table>